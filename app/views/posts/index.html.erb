<html>
<head>
  <title>Posts Dashboard</title>
</head>
<body>
  <h2> Welcome <%= current_user.first_name + " " + current_user.surname %> </h2>

  <nav class="navbar navbar-default navbar-light bg-light">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar-top">
          <span class="sr-only">Toggle navigation</span>
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= link_to "Home", root_url, class: "navbar-brand" %>
        <%= link_to "Posts", "/posts", class: "navbar-brand" %>
      </div>
      <div class="collapse navbar-collapse" id="navbar-top">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li><%= link_to('Sign out', destroy_user_session_path, method: :delete) %></li>
          <% else %>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
          <li><%= link_to 'Sign in', user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <p> Welcome <%= current_user.first_name + " " + current_user.surname %> </p>
  <% all_posts = @posts.sort_by { |sorted| sorted[:created_at] }.reverse! %>
  <p>
    <% @posts.each do |post| %>
    <% post.linebreak.each do |sortpost| %>
    <%= sortpost %> <br>
    <% end %>
    <%= post.created_at.strftime("Posted at: %H:%M on %A %d %B, %y") %>
  </p>
  <% end %>


  <%= link_to new_post_path do %>
  New post
  <% end %>
  <br>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
</body>
</html>
